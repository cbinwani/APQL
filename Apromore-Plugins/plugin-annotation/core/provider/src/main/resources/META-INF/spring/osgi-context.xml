<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.eclipse.org/gemini/blueprint/schema/blueprint" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
            http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
       
    <!-- enable classpath scanning -->
    <context:component-scan base-package="org.apromore.annotation" />
       
    <osgi:service ref="annotationProcessorProviderImpl" interface="org.apromore.annotation.provider.AnnotationProcessorProvider" />
    <set id="annotationProcessorSet" interface="org.apromore.annotation.AnnotationProcessor" availability="optional" />

</beans:beans>